#!/bin/bash

##################################################
#
# Parses the parameters and sets variables equal to
# their names to 'true'.
#
# Expected params:
#   run || RUN
#   build || BUILD
#
##################################################
for arg in "$@"
do
    PARAMS=true
    echo "Argument '$arg'"
    eval $arg=true
done

# Build docker image.
if [[ -z $PARAMS || ( $PARAMS  && ( $BUILDME || $buildme ) ) ]];
then
    echo "Building docker container."
    docker build -t applicationserver ~/Programming/Blockchain-Voting-System/Programming/2_ApplicationServer/
fi

if [[ -z $PARAMS || ( $PARAMS  && ( $RUNME || $runme ) ) ]];
then
    echo "Running docker container"
    # Run the docker image. Expose port 80. Use volume for our webapp so we dont have to rebuild for all changes.
    docker run -t -i -p 80:80 -p 5436:5436 -v ~/Programming/Blockchain-Voting-System/Programming/2_ApplicationServer/:/usr/src/applicationserver/ --env-file=/home/mattie432/Programming/Blockchain-Voting-System/Programming/2_ApplicationServer/bin/Variables.env applicationserver
fi
